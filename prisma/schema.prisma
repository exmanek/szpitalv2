generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId     Int           @id @default(autoincrement())
  name       String
  surname    String
  email      String        @unique
  password   String
  phone      String
  appointments Appointment[]
}

model Doctor {
  doctorId       Int              @id @default(autoincrement())
  name           String
  surname        String
  email          String           @unique
  password       String

  specialization Specialization[] @relation("DoctorSpecialization")
  appointments   Appointment[]    @relation("DoctorAppointments")
}

model Specialization {
  id      Int      @id @default(autoincrement())
  name    String
  doctors Doctor[] @relation("DoctorSpecialization")
}

model Appointment {
  id        Int               @id @default(autoincrement())
  date      DateTime
  doctorId  Int
  userId    Int
  status    AppointmentStatus @default(SCHEDULED)
  doctor    Doctor @relation("DoctorAppointments", fields: [doctorId], references: [doctorId])
  patient   User   @relation(fields: [userId], references: [userId])
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  FINISHED
}
